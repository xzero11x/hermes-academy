              text: 'Enviar Contraoferta',
              class: 'btn-primary',
              action: () => {
                const input = document.querySelector(`#${modalId} .price-input`);
                const value = input ? parseFloat(input.value) : null;

                if (!value || value <= 0) {
                  alert('Debe ser un n√∫mero mayor a 0');
                  return;
                }

                this.closeModal(modalId);
                resolve(value);
              },
            },
          ],
        });
      });
    },

